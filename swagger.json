      "/products/prince/{userId}/{name}": {
        "get": {
          "tags": ["Products"],
          "summary": "Get special price of a product for a user",
          "parameters": [
            {
              "in": "path",
              "name": "userId",
              "required": true,
              "schema": { "type": "string" },
              "description": "User ID"
