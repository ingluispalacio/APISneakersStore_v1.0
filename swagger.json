                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": { "type": "boolean" },
                      "data": {
                        "type": "object",
                        "properties": {
                          "precio": { "type": "number" }
                        }
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "User not found or Product not found. The user/product must exist to be able to consult the special price"
            },
            "500": {
              "description": "Internal Server Error"
            }
